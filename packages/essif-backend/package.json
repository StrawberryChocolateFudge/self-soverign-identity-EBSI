{
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint-staged": "lint-staged",
    "lint": "npm run lint:js && npm run lint:ts && npm run lint:prettier",
    "lint:js": "eslint \"*/**/*.{js,ts}\"",
    "lint:ts": "tsc --noEmit --incremental false",
    "lint:prettier": "prettier --check \"**/*.{md,mdx,html,json,yml,js,jsx,ts,tsx,css,scss}\"",
    "test": "npm run test:unit && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:unit": "jest --coverage --reporters=default --reporters=jest-sonar",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@cef-ebsi/did-auth": "0.0.3",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.0.13",
    "@nestjs/config": "^0.4.2",
    "@nestjs/core": "^7.0.13",
    "@nestjs/platform-express": "^7.0.13",
    "@nestjs/serve-static": "^2.1.1",
    "axios": "^0.19.2",
    "base64url": "^3.0.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.22.0",
    "jose": "^1.27.0",
    "nest-winston": "^1.3.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.13",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/hapi__joi": "^17.1.0",
    "@types/helmet": "0.0.47",
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.5",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "jest-express": "^1.12.0",
    "jest-sonar": "^0.2.8",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!main.ts",
      "!app.module.ts"
    ],
    "testTimeout": 10000
  }
}
