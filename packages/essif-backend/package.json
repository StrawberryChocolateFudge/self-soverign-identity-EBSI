{
  "private": true,
  "name": "essif-backend",
  "version": "0.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint-staged": "lint-staged",
    "lint": "yarn lint:js && yarn lint:ts && yarn lint:prettier",
    "lint:js": "eslint \"*/**/*.{js,ts}\"",
    "lint:ts": "tsc --noEmit --incremental false",
    "lint:prettier": "prettier --check \"**/*.{md,mdx,html,json,yml,js,jsx,ts,tsx,css,scss}\"",
    "test": "yarn test:unit && yarn test:e2e",
    "test:watch": "jest --watch",
    "test:unit": "jest --coverage --reporters=default --reporters=jest-sonar",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@cef-ebsi/app-jwt": "0.0.12",
    "@cef-ebsi/did-auth": "0.0.11",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.6.5",
    "@nestjs/config": "^0.6.2",
    "@nestjs/core": "^7.6.5",
    "@nestjs/platform-express": "^7.6.5",
    "@nestjs/serve-static": "^2.1.4",
    "axios": "^0.21.1",
    "base64url": "^3.0.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^4.1.1",
    "jose": "^1.28.0",
    "nest-winston": "^1.4.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.5",
    "@types/express": "^4.17.8",
    "@types/express-rate-limit": "^5.1.0",
    "@types/hapi__joi": "^17.1.4",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.14",
    "@types/node": "^12.12.61",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "jest-express": "^1.12.0",
    "jest-sonar": "^0.2.11",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!main.ts",
      "!app.module.ts"
    ],
    "testTimeout": 10000
  }
}
