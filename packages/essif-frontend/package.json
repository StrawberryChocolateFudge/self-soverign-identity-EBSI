{
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production node ./scripts/check-vars.js && cross-env EXTEND_ESLINT=true react-scripts build",
    "lint-staged": "lint-staged",
    "lint": "run-s lint:*",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:prettier": "prettier . --check",
    "start": "cross-env NODE_ENV=development node ./scripts/check-vars.js && cross-env EXTEND_ESLINT=true react-scripts start",
    "test": "npm run test:unit",
    "test:unit": "react-scripts test --watchAll=false --coverage --reporters=default --reporters=jest-sonar",
    "test:dev": "react-scripts test"
  },
  "dependencies": {
    "@ecl/ec-preset-website": "^2.28.3",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-app-polyfill": "^1.0.6",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.7.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@typescript-eslint/parser": "^2.34.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "history": "^4.10.1",
    "jest-sonar": "^0.2.8",
    "jose": "^1.27.0",
    "lint-staged": "^10.2.4",
    "mutationobserver-shim": "^0.3.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "stylelint": "^13.4.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^3.9.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb",
      "airbnb/hooks",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "prettier/react"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/env.js",
      "!src/index.js"
    ]
  }
}
